<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.advait.s.emokylo.MainActivity"
    android:background="@drawable/background" >

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:animateLayoutChanges="true" >
        
        <ImageView
            android:id="@+id/icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/kyloicon"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/kyloname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kylo Ren"
            android:layout_below="@id/icon"
            android:layout_marginTop="15dp"
            android:textColor="@color/heading"
            android:textSize="30dp"
            android:layout_centerHorizontal="true" />
        
        <TextView
        android:id="@+id/introtext"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/kyloname"
        android:textColor="@color/heading"
    	android:layout_centerHorizontal="true"
    	android:gravity="center"
    	android:text="@string/kylorenintro" />
        
        <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/progressdrawable"
        android:thumb="@drawable/thumb"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/introtext"
    	android:layout_centerHorizontal="true" />
        
        <RelativeLayout
    android:id="@+id/relLay2"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/seekBar"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    android:animateLayoutChanges="true"
     >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Deeper Voice"
        android:layout_marginLeft="15dp"
        android:textColor="@color/heading"
        android:textSize="12sp"
        android:padding="5dp"
        android:background="@color/darkblue" />
        <TextView
        android:id="@+id/recstat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="RECORDING"
        android:visibility="invisible"
        android:padding="5dp"
        android:textColor="@color/accent"
        android:textSize="12sp"
        android:background="@color/darkblue"
         />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Lighter Voice"
        android:layout_marginRight="15dp"
        android:textColor="@color/heading"
        android:textSize="12sp"
        android:padding="5dp"
        android:background="@color/darkblue" />
</RelativeLayout>

        <Button
        android:id="@+id/button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relLay2"
        android:layout_marginTop="15dp"
        android:background="@drawable/rec_but" />
        
        <LinearLayout
            android:id="@+id/postRecButHolder"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relLay2"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:orientation="horizontal" >
            <ImageView
        android:id="@+id/cancelbutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="150dp"
        android:src="@drawable/ic_delete_white_48dp"
        android:background="?attr/selectableItemBackgroundBorderless" />
            <ImageView
        android:id="@+id/button2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_done_white_48dp"
        android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>
        
    </RelativeLayout>
    
    
</RelativeLayout>